//- 変数初期設定
- var head = {}
- head.title       = 'SAMPLE'
- head.keywords    = ''
- head.description = ''
- var filePath = './'

- var siteTitle       = 'サンプルウェブサイト'
- var siteKeywords    = ''
- var siteDescription = ''
- var siteURL         = ''

//- 変数読み込み
block vars

//- パーツ読み込み
block includes

doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')

    if head.title === ''
      title #{siteTitle}
    else
      title #{head.title} | #{siteTitle}

    meta(name="keywords", content=`${ head.keywords }`)
    meta(name="description", content=`${ head.description }`)

    if head.title === ''
      meta(property="og:title", content=`${ siteTitle }`)
    else
      meta(property="og:title", content=`${ head.title } | ${ siteTitle }`)

    meta(property="og:description", content=`${ head.description }`)
    meta(property="og:url", content=`${ siteURL }${ filePath }`)
    meta(property="og:locale", content="ja_JP")

    if filePath === '/'
      meta(property="og:type", content="website")
    else
      meta(property="og:type", content="article")

    meta(property="og:image", content=``)

    link(rel="shortcut icon", href=`${ filePath }assets/images/favicon/favicon.ico`)
    link(rel='stylesheet', href=`${ filePath }assets/css/style.css`)

    script(src="https://www.googletagmanager.com/gtag/js?id=", async)
    script
      | window.dataLayer = window.dataLayer || [];
      | function gtag(){dataLayer.push(arguments);}
      | gtag('js', new Date());
      | gtag('config', '');

  body
    block body

    block scripts
    script(src=`${ filePath }assets/js/main.min.js`)
